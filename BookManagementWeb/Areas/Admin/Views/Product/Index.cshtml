@model List<Product>;
@{
    ViewData["Title"] = "Index Book";
}
<div class="container-fluid">
    <div class="card shadow border-1 mt-4">
        <div class="card-header bg-secondary bg-gradient  py-3">
            <div class="row">
                <div class="col-12 text-center text-white">
                    <h2>List Book</h2>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container-fluid mb-3">
                <div class="row">
                    <div class="col-12 text-start p-0">
                        <a asp-controller="Product" asp-action="CreateOrUpdate" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create new Book
                        </a>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table id="myTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>ISBN</th>
                            <th>ListPrice</th>
                            <th>Category Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product item in Model)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.Title</td>
                                <td>@item.Author</td>
                                <td>@item.ISBN</td>
                                <td>@item.ListPrice</td>
                                <td>@item.Category.Name</td>
                                <td class="text-center">
                                    <div class="w-100 btn-group" role="group">
                                        <a asp-controller="Product" asp-action="CreateOrUpdate" asp-route-id="@item.ProductId" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil-square"> Edit</i>
                                        </a>
                                        <a onclick="DeleteConfirm('/admin/product/delete/@item.ProductId', this)" class="btn btn-outline-danger mx-2">
                                            <i class="bi bi-trash"> Delete</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

