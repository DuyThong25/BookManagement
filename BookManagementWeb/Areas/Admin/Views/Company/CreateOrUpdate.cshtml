@model Company;
@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = "Create Company";
    }
    else
    {
        ViewData["Title"] = "Update Company";
    }
}
<div class="container">
    <div class="card shadow border-1 mt-4">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center text-white">
                    <h2>@(Model.Id == 0 ? "Create" : "Update") Company</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row" enctype="multipart/form-data">
                @* <div asp-validation-summary="All"></div> *@
                <input asp-for="Id" hidden />
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="Name" class="form-control border-0 shadow" />
                                    <label asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
                                    <label asp-for="PhoneNumber"></label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="Address" class="form-control border-0 shadow" />
                                    <label asp-for="Address"></label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="Ward" class="form-control border-0 shadow" />
                                    <label asp-for="Ward"></label>
                                    <span asp-validation-for="Ward" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="District" class="form-control border-0 shadow" />
                                    <label asp-for="District"></label>
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="City" class="form-control border-0 shadow" />
                                    <label asp-for="City"></label>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6 col-lg-3">
                                <button type="submit" class="form-control btn btn-primary">
                                    @(Model.Id == 0 ? "Create" : "Update")
                                </button>
                            </div>
                            <div class="col-6 col-lg-3">
                                <a asp-controller="Company" asp-action="Index" class="form-control btn btn-outline-primary border">Back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

