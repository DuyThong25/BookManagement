@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-lg-12">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        @if (!User.IsInRole(StaticDetail.Role_Company))
                        {
                            <input asp-for="Input.Name" class="form-control" placeholder="Please enter your name." />
                            <label asp-for="Input.Name" class="form-label"></label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        }
                        else
                        {
                            <input asp-for="Input.Name" class="form-control" placeholder="Please enter your name." disabled />
                            <label asp-for="Input.Name" class="form-label"></label>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        @if (!User.IsInRole(StaticDetail.Role_Company))
                        {
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        }
                        else
                        {
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." disabled />
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        }
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        @if (!User.IsInRole(StaticDetail.Role_Company))
                        {
                            <input asp-for="Input.BirthDay" class="form-control" placeholder="Please enter your birthDay." type="date" />
                            <label asp-for="Input.BirthDay" class="form-label"></label>
                            <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
                        }
                        else
                        {
                            <input asp-for="Input.BirthDay" class="form-control" placeholder="Please enter your birthDay." type="date" disabled />
                            <label asp-for="Input.BirthDay" class="form-label">Founding date</label>
                        }
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                @if (!User.IsInRole(StaticDetail.Role_Company))
                {
                    <input asp-for="Input.Address" class="form-control" placeholder="Please enter your address." />
                    <label asp-for="Input.Address" class="form-label"></label>
                }
                else
                {
                    <input asp-for="Input.Address" class="form-control" placeholder="Please enter your address." disabled />
                    <label asp-for="Input.Address" class="form-label"></label>
                }
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-floating mb-3">
                        @if (!User.IsInRole(StaticDetail.Role_Company))
                        {
                            <input asp-for="Input.Ward" class="form-control" placeholder="Please enter your ward." />
                            <label asp-for="Input.Ward" class="form-label"></label>
                        }
                        else
                        {
                            <input asp-for="Input.Ward" class="form-control" placeholder="Please enter your ward." disabled />
                            <label asp-for="Input.Ward" class="form-label"></label>
                        }
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating mb-3">
                        @if (!User.IsInRole(StaticDetail.Role_Company))
                        {
                            <input asp-for="Input.District" class="form-control" placeholder="Please enter your district." />
                            <label asp-for="Input.District" class="form-label"></label>
                        }
                        else
                        {
                            <input asp-for="Input.District" class="form-control" placeholder="Please enter your district." disabled />
                            <label asp-for="Input.District" class="form-label"></label>
                        }
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating mb-3">
                        @if (!User.IsInRole(StaticDetail.Role_Company))
                        {
                            <input asp-for="Input.City" class="form-control" placeholder="Please enter your city." />
                            <label asp-for="Input.City" class="form-label"></label>
                        }
                        else
                        {
                            <input asp-for="Input.City" class="form-control" placeholder="Please enter your city." disabled />
                            <label asp-for="Input.City" class="form-label"></label>
                        }
                    
                    </div>
                </div>
            </div>
            @if (!User.IsInRole(StaticDetail.Role_Company))
            {
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
