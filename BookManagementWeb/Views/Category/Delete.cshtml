@model Category;
@{
    ViewData["Title"] = "Delete category";
}
<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="row">
        <h2>Delete Category</h2>
        <hr />
    </div>
    <div class="row p-2">
        <label asp-for="Name" class="p-0 form-control"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="row p-2">
        <label asp-for="DisplayOrder" class="p-0 form-control" disabled></label>
        <input asp-for="DisplayOrder" class="form-control" disabled />

    </div>
    <div class="row mt-2">
        <div class="col-6 col-lg-3">
            <button type="submit" class="form-control btn btn-outline-danger">Delete</button>
        </div>
        <div class="col-6 col-lg-3">
            <a asp-controller="Category" asp-action="Index" class="form-control btn btn-outline-primary">Back to list</a>
        </div>
    </div>
</form>