@model Category;
@{
    ViewData["Title"] = "Create category";
}
<form method="post">
    <div class="row">
        <h2>Create Category</h2>
        <hr />
    </div>
    @* <div asp-validation-summary="All"></div> *@
    <div class="row p-2">
        <label asp-for="Name" class="p-0 form-control"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row p-2">
        <label asp-for="DisplayOrder" class="p-0 form-control"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>
    <div class="row mt-2">
        <div class="col-6 col-lg-3">
            <button type="submit" class="form-control btn btn-primary">Create</button>
        </div>
        <div class="col-6 col-lg-3">
            <a asp-controller="Category" asp-action="Index" class="form-control btn btn-outline-primary">Back to list</a>
        </div>
    </div>
</form>

 @section Scripts{
     @{
        <partial name="_ValidationScriptsPartial"></partial>
     }
 } 