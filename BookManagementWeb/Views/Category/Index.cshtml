@model List<Category>;
@{
    ViewData["Title"] = "Index category";
}
<div class="card shadow border-1 mt-4">
    <div class="card-header bg-secondary bg-gradient  py-3">
        <div class="row">
            <div class="col-12 text-center text-white">
                <h2>List Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container mb-3">
            <div class="row">
                <div class="col-12 text-start p-0">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create new Category
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category item in Model)
                {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"> Edit</i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger mx-2">
                                    <i class="bi bi-trash"> Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
