<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script type="text/javascript">
    const toastrOptionSuccess = {
        "closeButton": true,
        "debug": false,
        "newestOnTop": true,
        "progressBar": true,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };

    const toastrOptionError = {
        "closeButton": true,
        "debug": false,
        "newestOnTop": true,
        "progressBar": true,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };

    function ShowSuccessToast(message) {
        toastr.options = toastrOptionSuccess;
        toastr.success(message);
    }

    function ShowErrorToast(message) {
        toastr.options = toastrOptionError;
        toastr.error(message);
    }
</script>

<!-- #region Thông Báo khi không trả về Json -->
@if (TempData["success"] != null)
{
    <script type="text/javascript">
        $(document).ready(function () {
            ShowSuccessToast('@TempData["success"]');
        });
    </script>
}
@if (TempData["error"] != null)
{
    <script type="text/javascript">
        $(document).ready(function () {
            ShowErrorToast('@TempData["error"]');
        });
    </script>
}
<!-- #endregion -->